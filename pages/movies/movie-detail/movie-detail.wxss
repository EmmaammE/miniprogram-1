/* pages/movies/movie-detail/movie-detail.wxss */

.item-container {
    display: flex;
    flex-direction: column;
}
/* 缩放效果一定要制定高宽 */
.img-header {
    width: 100%;
    height: 320rpx;
    filter: blur(20px);
}

.img-header-hover {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 320rpx;
    position: absolute;
    top: 0;
    left: 0;

    margin-top: 50rpx;
    margin-left: 20rpx;
}

.main-title {
    font-size: 19px;
    color: #fff;
    font-weight: bold;
    letter-spacing: 2px;
}